<%= form_with(model: todo) do |form| %>
  <% if todo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "form-label", style: "display: block" %>
    <%= form.text_field :title %>
  </div>
  <br />

  <div>
    <%= form.submit class: "btn mt-auto", style: "background-color: #651FFF; color: white" %>
    <%= link_to "Back to todos", project_todos_path(@project), class: "btn btn-secondary text-light border-dark mt-auto" %>
  </div>
<% end %>
